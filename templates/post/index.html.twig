{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of all posts</h1>
    <table class="table table-striped">
        <thread>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Actions</td>
            </tr>
        </thread>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>
                        <a href="{{ path('post.show', {id: post.id}) }}">
                            {{ post.title }}
                        </a>
                    <td>
                        <a href="{{ path('post.delete', {id: post.id}) }}">
                            Delete    
                        </a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
{% endblock %}